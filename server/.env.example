# Server Environment Variables

PORT=8080
NODE_ENV=development

# Database (optional for MVP)
# DATABASE_URL=postgresql://user:password@localhost:5432/seoul_transit

# Redis (optional for MVP)
# REDIS_URL=redis://localhost:6379

# Seoul Open Data API Keys (add when ready)
# SEOUL_BUS_API_KEY=your_key_here
# SEOUL_SUBWAY_API_KEY=your_key_here

# Geocoding API (choose one)
# KAKAO_API_KEY=your_key_here
# NAVER_API_KEY=your_key_here
# GOOGLE_MAPS_API_KEY=your_key_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_TTL_ARRIVALS_SECONDS=20
CACHE_TTL_STATIC_DATA_SECONDS=86400

# Logging
LOG_LEVEL=info
